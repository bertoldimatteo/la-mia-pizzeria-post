
@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Crea il tuo nuovo piatto:</h1>
            </div>
            <form asp-controller="Pizza" asp-creation="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <strong>Nome piatto:</strong>
                    <input asp-for="Name" class="d-block w-100"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <strong>Descrizione:</strong>
                    <textarea asp-for="Description" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <strong>Foto piatto:</strong>
                    <input asp-for="Photo" class="d-block w-100" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <strong>Prezzo piatto:</strong>
                    <input asp-for="Price" class="d-block w-100" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>
            </form>
        </div>
    </div>
</div>