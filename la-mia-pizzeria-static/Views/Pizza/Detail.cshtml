
@model Pizza
@{
    int count = 0;
}
<div class="title">
    <h1>Pizzeria Belfiore - Al cadavere</h1>
    <p>Via del cimitero n°1</p>
</div>

<div class="pizza-section">
    <div class="pizza-view">
        <span class="invisible">@count</span>
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
        <img src="@Model.Photo">
        <p>Prezzo: @Model.Price €</p>
    </div>
</div>